<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f4f4f7"
    android:orientation="vertical" >

    <include
        android:id="@+id/diviceset_title"
        layout="@layout/activity_title" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="8dp"
        android:background="@color/divider" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="12dp" >

            <TextView
                android:id="@+id/diviceset_text1"
                android:layout_width="97dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="设备名称"
                android:textColor="#121212"
                android:textSize="@dimen/first_font" />

            <ImageView
                android:id="@+id/diviceset_image1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/arrow_blue" />

            <EditText
                android:id="@+id/diviceset_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/diviceset_image1"
                android:layout_toRightOf="@id/diviceset_text1"
                android:background="@null"
                android:textColor="#00bdff"
                android:textSize="@dimen/first_font" />
        </RelativeLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/divider" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="97dp"
                android:layout_height="wrap_content"
                android:text="设备ID"
                android:textColor="#121212"
                android:textSize="@dimen/first_font" />

            <TextView
                android:id="@+id/diviceset_id"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:singleLine="true"
                android:text="123456"
                android:textColor="#646464"
                android:textSize="@dimen/first_font" />
        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/divider" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="97dp"
                android:layout_height="wrap_content"
                android:text="设备类型"
                android:textColor="#121212"
                android:textSize="@dimen/first_font" />

            <TextView
                android:id="@+id/diviceset_type"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:singleLine="true"
                android:text="灯泡"
                android:textColor="#646464"
                android:textSize="@dimen/first_font" />
        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/divider" />

        <RelativeLayout
            android:id="@+id/diviceset_roomview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/item_bg"
            android:clickable="true"
            android:padding="12dp" >

            <TextView
                android:id="@+id/diviceset_text2"
                android:layout_width="97dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="设备房间"
                android:textColor="#121212"
                android:textSize="@dimen/first_font" />

            <ImageView
                android:id="@+id/diviceset_image2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/arrow_blue" />

            <TextView
                android:id="@+id/diviceset_room"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/diviceset_image2"
                android:layout_toRightOf="@id/diviceset_text2"
                android:background="@null"
                android:text="大厅"
                android:textColor="#00bdff"
                android:textSize="@dimen/first_font" />
        </RelativeLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/divider" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="97dp"
                android:layout_height="wrap_content"
                android:text="安装位置"
                android:textColor="#121212"
                android:textSize="@dimen/first_font" />

            <EditText
                android:id="@+id/diviceset_address"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:singleLine="true"
                android:text="入门左侧"
                android:textColor="#646464"
                android:textSize="@dimen/first_font" />
        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/divider" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="97dp"
                android:layout_height="wrap_content"
                android:text="控制设备"
                android:textColor="#121212"
                android:textSize="@dimen/first_font" />

            <EditText
                android:id="@+id/diviceset_control"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:singleLine="true"
                android:text="设备1 设备2"
                android:textColor="#646464"
                android:textSize="@dimen/first_font" />
        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/divider" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="50dp"
            android:gravity="center"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/diviceset_save"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:background="@drawable/blue_bg"
                android:clickable="true"
                android:gravity="center"
                android:padding="0dp"
                android:text="保存"
                android:textColor="#00bdff"
                android:textSize="@dimen/first_font" />

            <TextView
                android:id="@+id/diviceset_cancel"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:background="@drawable/glay_bg"
                android:clickable="true"
                android:gravity="center"
                android:padding="0dp"
                android:text="放弃"
                android:textColor="#646464"
                android:textSize="@dimen/first_font" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout><!-- From: file:/D:/studio/studio/SmartHome/res/layout/activity_diviceset.xml -->