<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:su="http://schemas.android.com/apk/res-auto"
    android:layout_width="300dp"
    android:layout_height="match_parent"
    android:background="@drawable/datedialog_bg"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:padding="0dp" >

    <EditText
        android:id="@+id/addmark_dialog_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="17dp"
        android:layout_marginRight="17dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/edit_bg"
        android:hint="请输入房间名称"
        android:padding="8dp"
        android:textColor="#121212"
        android:textColorHint="#909090"
        android:textSize="@dimen/first_font" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="20dp"
        android:background="@color/ptime_lin" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/addmark_dialog_ok"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/datedialog_lef"
            android:clickable="true"
            android:gravity="center"
            android:paddingBottom="12dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="12dp"
            android:text="确定"
            android:textColor="#00bdff"
            android:textSize="@dimen/first_font" />

        <ImageView
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/ptime_lin" />

        <TextView
            android:id="@+id/addmark_dialog_cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/datedialog_rig"
            android:clickable="true"
            android:gravity="center"
            android:paddingBottom="12dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="12dp"
            android:text="取消"
            android:textColor="#00bdff"
            android:textSize="@dimen/first_font" />
    </LinearLayout>

</LinearLayout><!-- From: file:/E:/studio/SmartHome/res/layout/addmark_dialog.xml -->