<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:su="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:paddingBottom="8dp"
        android:paddingTop="8dp"
        android:text="选择房间"
        android:textColor="#121212"
        android:textSize="@dimen/title_font" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/ptime_lin" />

    <com.mu.smarthome.view.ScrollerNumberPicker
        android:id="@+id/trade_numberPicker"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="1dp"
        android:layout_marginRight="1dp"
        android:layout_marginTop="20dp"
        su:itemNumber="4"
        su:lineColor="#333333"
        su:maskHight="36dp"
        su:noEmpty="true"
        su:normalTextColor="#999999"
        su:normalTextSize="16sp"
        su:selecredTextColor="#888888"
        su:selecredTextSize="18sp"
        su:unitHight="50dp" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/ptime_lin" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/trade_cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/dialog_btn"
            android:clickable="true"
            android:gravity="center"
            android:paddingBottom="12dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="12dp"
            android:text="取消"
            android:textColor="#121212"
            android:textSize="@dimen/second_font" />

        <ImageView
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/ptime_lin" />

        <TextView
            android:id="@+id/trade_ok"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/dialog_btn"
            android:clickable="true"
            android:gravity="center"
            android:paddingBottom="12dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="12dp"
            android:text="确定"
            android:textColor="#121212"
            android:textSize="@dimen/second_font" />
    </LinearLayout>

</LinearLayout>